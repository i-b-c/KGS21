nav.navbar.navbar-default.navbar-fixed-top
    .container-fluid
        .navbar-header
            button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
                .icon-bar
                .icon-bar
                .icon-bar
            a.navbar-brand.logo(href='festivals')
                img(src='/assets/images/saal_logo.svg', alt='LOGO ALT TEXT!')

        .collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
            ul.nav.navbar-nav.main-nav
                - var fest_path = `/festival/${self.remote_id}`
                - var fest_path_lang = `/${lang_path}festival/${self.remote_id}`
                li(class= (self.path === `${fest_path}/about/` || self.path === `${fest_path_lang}/about/`) ? 'active' : undefined )
                    a(href=`${fest_path}/about/`)= self.labels.nav.about_festival
                if self.coverages
                    li(class= (self.path === `${fest_path}/press/` || self.path === `${fest_path_lang}/press/`) ? 'active' : undefined )
                        a(href=`${fest_path}/press`)= self.labels.nav.press
                li(class= (self.path === `${fest_path}/program/` || self.path === `${fest_path_lang}/program/`) ? 'active' : undefined )
                    a(href=`${fest_path}/program`)= self.labels.nav.program
                li(class= self.path === `${fest_path}/tickets` ? 'active' : undefined )
                    a(href=`${fest_path}/tickets`)= self.labels.nav.tickets


            ul.nav.navbar-nav.navbar-right.social
                li
                    a.icon-facebook3(href='https://www.facebook.com/saalbiennaal?fref=ts', target='blank')
                each p, locale in self.otherLocalePaths
                    li.lang
                        a(href=(p !== '/' ? p + '/' : '/'))= locale
