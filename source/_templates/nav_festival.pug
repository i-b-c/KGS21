nav.navbar.navbar-default.navbar-fixed-top
    .container-fluid
        .navbar-header
            button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
                .icon-bar
                .icon-bar
                .icon-bar
            a.navbar-brand.logo(href='festivals')
                img(src='/assets/images/saal_logo.svg', alt='LOGO ALT TEXT!')

        .collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
            ul.nav.navbar-nav.main-nav
                li(class= self.path === `/${lang_path}festival/${self.id}/about` ? 'active' : undefined )
                    a(href=`/${lang_path}festival/${self.id}/about`)= self.labels.nav.festival
                if typeof festival !== 'undefined' && festival.coverage && Object.keys(festival.coverage).length
                    li(class= self.path === `/${lang_path}festival/${self.id}/press` ? 'active' : undefined )
                        a(href=`/${lang_path}festival/${self.id}/press`)= self.labels.nav.press
                li(class= (self.path === `/${lang_path}festival/${self.id}/program` || self.path === `/${lang_path}festival/${self.id}`) ? 'active' : undefined )
                    script.
                        console.log(`/#{lang_path}festival/#{self.id}/program`, ' - ', `#{self.path}`)
                    a(href=`/${lang_path}festival/${self.id}/program`)= self.labels.nav.program
                li(class= self.path === `/${lang_path}festival/${self.id}/tickets` ? 'active' : undefined )
                    a(href=`/${lang_path}festival/${self.id}/tickets`)= self.labels.nav.tickets


            ul.nav.navbar-nav.navbar-right.social
                li
                    a.icon-facebook3(href='https://www.facebook.com/saalbiennaal?fref=ts', target='blank')
                each p, locale in self.otherLocalePaths
                    li.lang
                        a(href=(p !== '/' ? p + '/' : '/'))= locale
